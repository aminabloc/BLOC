		<div "side-menu cbp-spmenu cbp-spmenu-vertical cbp-spmenu-right">
		<ul>
			<li><%= link_to "Bloc", root_path %></li>
			<li><%= link_to "Resources ", contents_path %></li>
			<li><%= link_to "Edit Profile ", edit_user_registration_path %></li>
			<li><a href="mailto:info@ourbloc.co">Contact US</a></li>
