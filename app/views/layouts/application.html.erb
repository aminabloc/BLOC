		<li> <%= link_to "#Apply", hashtag_path("apply") %> </li>
		

</div>



	<div id="main_content">
		
		<!-- nav bar --> 
		<div class="navbar navbar-fixed-top" id="header" style="height: 8%;border-bottom: 5px solid #f5f5f5">
			<!-- responsive nav bar -->
			<div class="container">
			<div class="nav-collapse collapse navbard-responsive-collapse">
			</div> <!-- end nav collapse-->


			<div><%= link_to image_tag('bloclogovert.jpg') , root_path %></p> 


		<% if user_signed_in? %>
			
	     
	       
			<div class="topbutton" id="hide" style="float:right; text-transform:uppercase"><%= link_to image_tag("winning-project.png"), users_path %></div>
			

			<%if current_user.role=="student" %>
			<div  id="hide" style=" float:right; text-transform:uppercase"><%= link_to image_tag("edit-pencil.png"), new_post_path %></div>
			<div class="topbutton" style="float:right; text-transform:uppercase"><%= link_to "All Posts", posts_path %></div> 

		
			<div class="topbutton" id="hide" style=" float:right; text-transform:uppercase"><%= link_to "Resources", contents_path %></div>
			<%end %>

			<% if current_user.role=="company" %> 
			<div  class="topbutton" style="float:right; text-transform:uppercase"><%= link_to "New Job", new_job_path %></div> 
			<div  class="topbutton" style="float:right; text-transform:uppercase"><%= link_to "My Jobs", myjobs_path %></div> 
				<%end %> 

			<div  class="topbutton" style="float:right; text-transform:uppercase"><%= link_to "All Jobs", jobs_path %></div> 


			



