<div id="spacer"> </div>
<div id="job_background">

<div id="spacer"> </div>

<h1><%= @jobs.count %> Jobs</h1>


<table style="width: 950px; height:10%" id="table_id" class="display">
  <thead >
    <tr style="background-color: #f5f5f5">
      <th>Employer</th>
      <th>Title</th>
      <th>Deadline</th>
      <th>Description</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each   do |job| %>
   
      <tr style="background-color: white; border: 5px solid #f5f5f5">
        <td style="padding-left: 10px"> <h4> <%= job.user.company%> </h4> </td>
        <td><%= link_to job.title, job %></td>
        <td><%= job.deadline  %></td>
        <td><%= job.description %></td>
        
        <% if current_user.role=="student" %> 
        <td><button> <%= link_to 'Apply Now', job %> </button></td>

        <% elsif current_user = job.user %> 
        <td><button> <%= link_to 'All Applications', job %> </button></td>
      <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>        

        <%else %>
        <%end %> 

        

        <% end %> 
      </tr>
   
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Job', new_job_path %>
</div>