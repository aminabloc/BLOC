<%= form_tag(users_path, :method => "get") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Posts" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %>
  <%= yield %>


<% @posts.each do |post| %>
	<div class="post_wrapper">

		<%if post.user.name == current_user.name %>
			<h2 class="user"> Me </h2>
			<% else %>
				<h2 class ="user"><%= post.user.name %>
		<%end %>

		<h2 class="title"><%= link_to post.title, post %></h2>
		<h2 class="body"><%= linkify_hashtags(post.body) %></h2>
		<h2 class="image"><%= image_tag post.image.url(:medium) %></h2>
		<p class="data"><%= post.created_at.strftime("%B, %d, %Y") %></p>
	</div>
<% end %>

<% @jobs.each do |job| %>
	<div class="post_wrapper">

		<h2 class="title"><%= link_to job.title, job %></h2>
		<h2 class="description"><%= linkify_hashtags(job.description) %></h2>
		<p class="data"><%= job.created_at.strftime("%B, %d, %Y") %></p>
	</div>
<% end %>

