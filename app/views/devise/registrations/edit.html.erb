<div style="height: 100px"> </div>
<div class="edit-wrapper">
<h2 style="top:5em"> Edit My Profile  </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

 <div class="form-group" style="display:none">
    <% if current_user.role == "student" %>
    <p> Profile Image </p>
    <%elsif current_user.role == "company" %>
      <p> Company Logo </p>
      <% end %> 
      <%= f.file_field :image %>
  </div>


  <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "edit-wrapper" %>
  </div>
   

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "edit-wrapper"%>
  </div>

    <div class="field">
    <%= f.label :role %><br />
    <%= f.email_field :role, autofocus: true, class: "edit-wrapper"%>
  </div>


<% if current_user.role != "company" %> 
 <h2> Education </h2>
  <div class="form-group">
      <%= f.label :school %>
      <%= f.text_field :school, class: "edit-wrapper" %>
  </div>

  <div class="form-group">
      <%= f.label "Graduation Year" %>
      <%= f.text_field :gradyear, class: "edit-wrapper" %>
  </div>

<div class="form-group">
      <%= f.label :major %>
      <%= f.text_field :major, class: "edit-wrapper" %>
  </div>

  <h2> Professional Experience </h2>
  <div class="form-group">
      <%= f.label :experience %>
      <%= f.text_area :experience, class: "edit-wrapper" %>
  </div>

  <div class="form-group">
      <%= f.label :skills %>
      <%= f.text_area :skills, class: "edit-wrapper" %>
  </div>

   <div class="form-group">
      <%= f.label :orgs %>
      <%= f.text_area :orgs, class: "edit-wrapper" %>
  </div>

 <div class="form-group">
      <%= f.label :links %>
      <%= f.text_area :links, class: "edit-wrapper" %>
  </div>

<div class="form-group">
      <%= f.label :threeskills %>
      <%= f.text_field :threeskills, class: "edit-wrapper" %>
  </div>

<div class="form-group">
      <%= f.label :phone %>
      <%= f.text_field :phone, class: "edit-wrapper" %>
  </div>

<div class="form-group">
      <%= f.label :geo %>
      <%= f.text_field :geo, class: "edit-wrapper" %>
  </div>

<div class="form-group">
      <%= f.label :hometown %>
      <%= f.text_field :hometown, class: "edit-wrapper" %>
  </div>

<div class="form-group">
      <%= f.label :resume %>
      <%= f.file_field :resume, class: "edit-wrapper" %>
  </div>

  

<%elsif current_user.role=="company" %> 
     <div class="field">
      <%= f.label :company %><br />
      <%= f.text_field :company, autofocus: true, class: "edit-wrapper"%>
    </div>

    <div class="field">
        <%= f.label :mission %><br />
        <%= f.text_area :mission, autofocus: true, class: "edit-wrapper"%>
      </div>

    <div class="field">
      <%= f.label :industry %><br />
      <%= f.text_field :mission, autofocus: true, class: "edit-wrapper"%>
    </div>

    <div class="field">
        <%= f.label :geo %><br />
        <%= f.text_field :geo, autofocus: true, class: "edit-wrapper"%>
      </div>


   

  <% end %> 



<h2> Account </h2>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>