<div  id= "spacer"> </div>

<%= form_tag(users_path, :method => "get") do %>
 <div class="search_bar_wrapper" style= "position:fixed" >
      <%= text_field_tag :search, params[:search], placeholder: "Search Network" %>
      <button style="display:none" type="submit "> Search </button>
</div>
  <% end %>
  <%= yield %>

<div  id= "spacer"> </div>
<% @users.each do |user| %>
	<% if user.role =="company" %>

		<table style="height: 10em; " class="post_wrapper">
			<td>
				<h2 class="image" style="margin:5%"><%= image_tag user.image.url(:small) %></h2>
			</td>


			<td>

		

		<td>
			<p class ="user">
				<%= user.company %>
			</p>

			<p class ="user">
					<%= user.geo %>
				</p>
				<p class ="user">
					<%= user.mission %>
				</p>
		</td>

<% end %>
<% end %>
</div>